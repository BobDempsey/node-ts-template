{
	"name": "node-ts-template",
	"version": "1.0.0",
	"description": "A Node.js TypeScript project template",
	"main": "dist/index.js",
	"scripts": {
		"dev": "nodemon --exec ts-node src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"clean": "rimraf dist",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:ci": "jest --ci --coverage --watchAll=false",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"prepare": "husky"
	},
	"keywords": [
		"nodejs",
		"node",
		"typescript",
		"template",
		"http",
		"server",
		"environment",
		"env",
		"zod",
		"validation",
		"jest",
		"supertest",
		"testing",
		"lint",
		"format",
		"biome",
		"vscode",
		"configuration",
		"schema",
		"typesafe",
		"integration",
		"unit",
		"constants"
	],
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/BobDempsey/node-ts-template.git"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.6",
		"@types/jest": "^30.0.0",
		"@types/node": "^20.10.0",
		"@types/supertest": "^6.0.3",
		"husky": "^9.1.7",
		"jest": "^30.2.0",
		"lint-staged": "^16.2.7",
		"nodemon": "^3.0.2",
		"rimraf": "^5.0.5",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.5",
		"ts-node": "^10.9.1",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=24.0.0",
		"npm": ">=10.0.0"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"zod": "^4.1.12"
	},
	"lint-staged": {
		"*": "biome check --write --no-errors-on-unmatched"
	}
}
